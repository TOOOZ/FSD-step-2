include /pug/main.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    title Colors & Type
    link(rel='stylesheet', href='main.css')
    link(rel='stylesheet', href='')
  body
    div(class='container colors')
      +box('#1F2041','Dark Shade 100% ','grey_100')
      +box('#1F2041','Dark Shade 75% ','grey_75')
      +box('#1F2041','Dark Shade 50% ','grey_50')
      +box('#1F2041','Dark Shade 25% ','grey_25')
      +box('#1F2041','Dark Shade 5% ','grey_05')
      +box('#BC9CFF','Purple ','purple')
      +box('#6FCF97','Green ','green')
    div(class='headers_types')
      div(class='h_lebels')
        p(class='h1') H1
        
        p(class='h2') H2
        
        p(class='h3') H3
        
        p(class='body_labels') Body
      div(class='h1_type') This one is the sub-section or widget title
      div(class='h2_type') Next one is the item title inside widgets
      div(class='h3_type') This is a label or CTA text
      div(class='body') This is the body text which is used for most <br> of the design, like paragraphs, lists, etc.
      
      